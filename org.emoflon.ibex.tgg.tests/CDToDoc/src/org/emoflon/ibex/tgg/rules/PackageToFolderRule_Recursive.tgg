#using CDToDoc.*
#using AttrCondDefLibrary.*

#rule PackageToFolderRule_Recursive #with CDToDoc

#source { 
	p1:Package{
		name != "root"
		index == 1
		pEnum != enum::PackageEnum::FIRST_ENUM
		++-packages->p2
	}
	
	++p2:Package {
		index := 1
		pEnum := enum::PackageEnum::SECOND_ENUM
	}
}

#target {
	
	f1:Folder{
		name != "root"
		++-folders->f2
		
	}
	
	++f2:Doc.Folder {
		name := "recursive_folder"
	}
}

#correspondence {
	p1f1:PackageToFolder{
		#src->p1
		#trg->f1
	}
	++p2f2:PackageToFolder{
		#src->p2
		#trg->f2
	}
}

#attributeConditions {
	uppercase(p1.name, p2.name)
}
