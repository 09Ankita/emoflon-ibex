#using CDToDoc.*
#using AttrCondDefLibrary.*

#rule PackageToFolderRule_Anchor #with CDToDoc

#source { 
	p1:Package{
//		name == "root"
		index <= 5
		++-packages->p2
	}
	
	++p2:Package {
		name := "anchor_package"
		index := 1
	}
}

#target {
	
	f1:Folder{
		name == "root"
		++-folders->f2
	}
	
	++f2:Doc.Folder {
		name := "anchor_folder"
	}
}

#correspondence {
	p1f1:PackageToFolder{
		#src->p1
		#trg->f1
	}
	++p2f2:PackageToFolder{
		#src->p2
		#trg->f2
	}
}

#attributeConditions {
	eq(p1.pEnum, p2.pEnum)
	eq(p1.name, "root")
}
